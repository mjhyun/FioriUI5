<mvc:View controllerName="SAP.BTP.ux410solving.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:core="sap.ui.core"
    xmlns:ux="sap.uxap"
    xmlns="sap.m"
	xmlns:f="sap.ui.layout.form">
    	<ux:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="true" upperCaseAnchorBar="false">
            <ux:headerTitle>
                <ux:ObjectPageHeader objectTitle="OrderID:{OrderID}"/>
            </ux:headerTitle>
        		<ux:sections>
			<ux:ObjectPageSection titleUppercase="false" title="Info">
            	<ux:subSections>
                    <ux:ObjectPageSubSection>
                        <ux:blocks>
                                <f:SimpleForm id="idSimpleForm"
                                editable="true"
                                layout="ColumnLayout"
                                columnsXL="4"
                                columnsL="3"
                                columnsM="2"
                                singleContainerFullSize="false" >
                                <f:content>
                                    <Label text="OrderID" />
                                    <Text text="{OrderID}" />

                                    <Label text="ProductID" />
                                    <Text text="{ProductID}"/>

                                    <Label text="UnitPrice" />
                                    <Text text="{UnitPrice}"/>

                                    <Label text="Quantity" />
                                    <Text text="{Quantity}" />

                                    <Label text="Discount" />
                                    <Text text="{Discount}" />            
                                </f:content>
                            </f:SimpleForm>
                        </ux:blocks>
                    </ux:ObjectPageSubSection>
                    </ux:subSections>
                    </ux:ObjectPageSection>
                        </ux:sections>
    </ux:ObjectPageLayout>
</mvc:View>