<c:FragmentDefinition 
    xmlns:c="sap.ui.core" 
    xmlns="sap.m" xmlns:t="sap.ui.table">

    <Dialog id="idDialog" title="Hello Dialog"
        contentHeight="50%"
        contentWidth="40%">
            <content>
            <t:Table
                id="idTable"
                rows="{/Orders}"
                selectionMode="None"
                rowActionCount="1"
                visibleRowCount="7"
                paste="onPaste"
                ariaLabelledBy="title">
                <t:columns>
                    <t:Column width="100%">
                        <Label text="OrderID" />
                        <t:template>
                            <Text text="{OrderID}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column width="100%">
                        <Label text="CustomerID" />
                        <t:template>
                            <Text text="{CustomerID}" wrapping="false" />
                        </t:template>
                    </t:Column>
                    <t:Column width="100%">
                        <Label text="EmployeeID" />
                        <t:template>
                            <Text text="{EmployeeID}" wrapping="false" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
            </content>
            <endButton>
                <Button text="Close" press="onClose" />
            </endButton>
    </Dialog>
</c:FragmentDefinition>