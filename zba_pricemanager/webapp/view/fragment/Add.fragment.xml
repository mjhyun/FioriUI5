<c:FragmentDefinition 
    xmlns:c="sap.ui.core" 
    xmlns="sap.m" xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form">

    <Dialog id="customerDialog" title="고객 추가" resizable="true"
        afterOpen="onAfterOpen"
        contentHeight="50%"
        contentWidth="50%">
        <f:SimpleForm id="addSimpleForm"
			editable="true"
			layout="ColumnLayout"
			columnsM="2"
			columnsL="3"
			columnsXL="4"
			>
				<Label text="고객명" />
				<Input value="{view>/Kutxt}" liveChange="onCheckInput" maxLength="6" required="true"/>
				<Label text="업종" />
				<Select id="brsch" selectedKey="{view>/Brsch}" forceSelection="false" required="true" liveChange="onCheckSelect">
					<items>
						<c:Item text="자동차" key="A"/>
						<c:Item text="건설" key="B"/>
					</items>
				</Select>  

				<!-- 두번째 -->
				<Label text="대표자명" />
				<Input value="{view>/Frepre}" liveChange="onCheckInput" required="true"/>

				<Label text="출하지점" />
				<Input value="{view>/Ablad}" liveChange="onCheckInput" required="true"/>

				<Label text="여신등급" />
				<Select id="crert" selectedKey="{view>/Crert}" forceSelection="false" required="true" liveChange="onCheckSelect">
					<items>
						<c:Item text="A+" key="A+"/>
                        <c:Item text="A" key="A"/>
                        <c:Item text="B+" key="B+"/>
                        <c:Item text="B" key="B"/>
                        <c:Item text="C" key="C"/>
					</items>
				</Select>

				<!-- 세번째 -->
				<Label text="이메일" />
				<Input value="{view>/Cemail}" type="Email" required="true"/>
				<Label text="전화번호" />
				<Input value="{view>/Telp1}" type="Tel" required="true"/>
				<Label text="주소" />
				<SearchField id="searchInput" value="{view>/Adrnr}" search="onAddrSearch" placeholder="주소 검색 by Daum Kakao"/>
            </f:SimpleForm>
            <beginButton>
                <Button text="추가" press="onInsert" />
            </beginButton>
            <endButton>
                <Button text="닫기" press="onClose" />
            </endButton>
    </Dialog>
</c:FragmentDefinition>